#include <iostream>
using namespace std;
int main(void)
{
	int a;
	cin >> a;
	for (int i = 1; i <= a; i++)
	{
		if (a % 2 == 0)
		{
			for (int k = 1; k <= a / 2; k++)
			{
				cout << "* ";
			}
			cout << endl;
			cout << " ";
			for (int k = 1; k <= a / 2; k++)
			{
				cout << "* ";
			}
			cout << endl;
		}
		else
		{
			for (int k = 1; k <= a / 2+1; k++)
			{
				cout << "* ";
			}
			cout << endl;
			cout << " ";
			for (int k = 1; k <= a / 2; k++)
			{
				cout << "* ";
			}
			cout << endl;
		}
	}
}
